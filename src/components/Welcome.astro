---
import background from '../assets/background.svg';
import { getCurrentLocale, getTranslations } from '../i18n/utils';

const currentLocale = getCurrentLocale(Astro.url);
const t = getTranslations(currentLocale);
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<section id="hero">
			<h1>{t.hero.heading}</h1>
			<p class="tagline">{t.hero.tagline}</p>
			<p class="future-badge">{t.hero.badge}</p>
			<p class="hype-text">
				{t.hero.description}
				<strong>{t.hero.descriptionStrong}</strong>
			</p>
		</section>

		<section id="workflow">
			<h2>{t.workflow.heading}</h2>

			<p class="workflow-intro">
				{t.workflow.intro} <code>{t.workflow.introCode}</code>{t.workflow.introEnd}
			</p>

			<div class="workflow-grid">
				<div class="workflow-step">
					<div class="step-icon">üìù</div>
					<h3>{t.workflow.step1.title}</h3>
					<p>{t.workflow.step1.description} <code>{t.workflow.step1.descriptionCode}</code>{t.workflow.step1.descriptionEnd}</p>
				</div>

				<div class="workflow-arrow">‚Üì</div>

				<div class="workflow-step">
					<div class="step-icon">üîç</div>
					<h3>{t.workflow.step2.title}</h3>
					<p>{t.workflow.step2.description}</p>
				</div>

				<div class="workflow-arrow">‚Üì</div>

				<div class="workflow-step">
					<div class="step-icon">ü§ñ</div>
					<h3>{t.workflow.step3.title}</h3>
					<p>{t.workflow.step3.description}</p>
				</div>

				<div class="workflow-arrow">‚Üì</div>

				<div class="workflow-step">
					<div class="step-icon">‚úÖ</div>
					<h3>{t.workflow.step4.title}</h3>
					<p>{t.workflow.step4.description}</p>
				</div>
			</div>
		</section>
	</main>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	main {
		width: 100%;
		max-width: 1200px;
		padding: 64px 32px;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 80px;
	}

	#hero {
		text-align: center;
		max-width: 800px;
	}

	h1 {
		font-size: 56px;
		font-weight: 700;
		margin: 0 0 24px 0;
		line-height: 1.1;
		background: linear-gradient(83.21deg, #5865ff 0%, #d670ff 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.tagline {
		font-size: 24px;
		color: #b0b8c3;
		margin: 0 0 32px 0;
		line-height: 1.5;
	}

	.future-badge {
		display: inline-block;
		font-size: 18px;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 2px;
		color: #ffffff;
		background: linear-gradient(135deg, #5865ff 0%, #d670ff 100%);
		padding: 12px 32px;
		border-radius: 50px;
		margin: 0 0 24px 0;
		box-shadow: 0 8px 24px rgba(88, 101, 255, 0.5);
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% {
			transform: scale(1);
			box-shadow: 0 8px 24px rgba(88, 101, 255, 0.5);
		}
		50% {
			transform: scale(1.05);
			box-shadow: 0 12px 32px rgba(88, 101, 255, 0.7);
		}
	}

	.hype-text {
		font-size: 20px;
		color: #d1d5db;
		line-height: 1.8;
		max-width: 700px;
		margin: 0 auto;
		padding: 24px 32px;
		background: rgba(30, 35, 45, 0.8);
		border-radius: 16px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
		border: 1px solid rgba(88, 101, 255, 0.2);
	}

	.hype-text strong {
		color: #8b95ff;
		font-weight: 700;
	}

	#workflow {
		width: 100%;
	}

	#workflow h2 {
		text-align: center;
		font-size: 36px;
		font-weight: 600;
		color: #f3f4f6;
		margin: 0 0 24px 0;
	}

	.workflow-intro {
		text-align: center;
		font-size: 18px;
		color: #d1d5db;
		line-height: 1.7;
		max-width: 800px;
		margin: 0 auto 48px auto;
		padding: 24px 32px;
		background: rgba(30, 35, 45, 0.8);
		border-radius: 16px;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
		border: 1px solid rgba(88, 101, 255, 0.2);
	}

	.workflow-grid {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		gap: 24px;
	}

	.workflow-step {
		background: rgba(30, 35, 45, 0.8);
		border-radius: 16px;
		padding: 32px 24px;
		width: 100%;
		max-width: 600px;
		text-align: center;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
		transition: transform 0.2s, box-shadow 0.2s;
		border: 1px solid rgba(88, 101, 255, 0.2);
	}

	.workflow-step:hover {
		transform: translateY(-4px);
		box-shadow: 0 8px 12px rgba(88, 101, 255, 0.3);
	}

	.step-icon {
		font-size: 48px;
		margin-bottom: 16px;
		line-height: 1;
	}

	.workflow-step h3 {
		font-size: 20px;
		font-weight: 600;
		color: #f3f4f6;
		margin: 0 0 12px 0;
	}

	.workflow-step p {
		font-size: 14px;
		color: #b0b8c3;
		line-height: 1.6;
		margin: 0;
	}

	.workflow-arrow {
		font-size: 32px;
		color: #8b95ff;
		font-weight: 700;
		flex-shrink: 0;
	}

	code {
		display: inline;
		background: rgba(88, 101, 255, 0.2);
		color: #a5b0ff;
		border-radius: 4px;
		padding: 2px 6px;
		font-size: 13px;
		font-family: ui-monospace, 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace;
	}

	@media screen and (max-width: 1024px) {
		h1 {
			font-size: 42px;
		}

		.tagline {
			font-size: 20px;
		}

		.future-badge {
			font-size: 16px;
			padding: 10px 28px;
			letter-spacing: 1.5px;
		}

		.hype-text {
			font-size: 18px;
			padding: 20px 28px;
		}

		#workflow h2 {
			font-size: 30px;
		}

		.workflow-intro {
			font-size: 16px;
			padding: 20px 28px;
		}
	}

	@media screen and (max-width: 640px) {
		main {
			padding: 48px 24px;
			gap: 60px;
		}

		h1 {
			font-size: 36px;
		}

		.tagline {
			font-size: 18px;
			margin-bottom: 24px;
		}

		.future-badge {
			font-size: 14px;
			padding: 8px 20px;
			letter-spacing: 1px;
		}

		.hype-text {
			font-size: 16px;
			line-height: 1.7;
			padding: 20px 24px;
		}

		#workflow h2 {
			font-size: 26px;
			margin-bottom: 20px;
		}

		.workflow-intro {
			font-size: 16px;
			margin-bottom: 32px;
			padding: 20px 24px;
		}

		.workflow-step {
			max-width: 400px;
		}
	}
</style>
