---
import { getCurrentLocale, getTranslations } from '../i18n/utils';

const currentLocale = getCurrentLocale(Astro.url);
const t = getTranslations(currentLocale);
---

<section id="contact-form-section" class="box">
	<h2>{t.contact.heading}</h2>
	<form id="contact-form">
		<div class="form-group">
			<label for="name">{t.contact.nameLabel}</label>
			<input type="text" id="name" name="name" required />
		</div>

		<div class="form-group">
			<label for="email">{t.contact.emailLabel}</label>
			<input type="email" id="email" name="email" required />
		</div>

		<div class="form-group">
			<label for="message">{t.contact.messageLabel}</label>
			<textarea id="message" name="message" rows="4" required></textarea>
		</div>

		<div class="form-group checkbox-group">
			<input type="checkbox" id="newsletter" name="newsletter" />
			<label for="newsletter">{t.contact.newsletterLabel}</label>
		</div>

		<button type="submit" class="submit-button">{t.contact.submitButton}</button>

		<div id="success-message" class="success-message" style="display: none;">
			<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
				<polyline points="20 6 9 17 4 12"></polyline>
			</svg>
			<span id="success-text"></span>
		</div>
	</form>
</section>

<script>
	import { getCurrentLocale, getTranslations } from '../i18n/utils';

	const currentLocale = getCurrentLocale(new URL(window.location.href));
	const t = getTranslations(currentLocale);

	const form = document.getElementById('contact-form') as HTMLFormElement;
	const successMessage = document.getElementById('success-message') as HTMLElement;
	const successText = document.getElementById('success-text') as HTMLElement;

	form?.addEventListener('submit', (e) => {
		e.preventDefault();

		const formData = new FormData(form);
		const newsletterChecked = formData.get('newsletter') === 'on';

		// Mock success response
		setTimeout(() => {
			let message = t.contact.successMessage;

			if (newsletterChecked) {
				message += t.contact.successNewsletter;
			}

			successText.textContent = message;
			successMessage.style.display = 'flex';
			form.reset();

			// Hide success message after 5 seconds
			setTimeout(() => {
				successMessage.style.display = 'none';
			}, 5000);
		}, 300);
	});
</script>

<style>
	#contact-form-section {
		max-width: 500px;
		margin: 0 auto;
		padding: 24px;
		background: rgba(255, 255, 255, 1);
		border-radius: 16px;
		border: 1px solid white;
		backdrop-filter: blur(50px);
	}

	h2 {
		margin: 0 0 1.5em;
		font-weight: 600;
		color: #111827;
		font-size: 24px;
	}

	.form-group {
		margin-bottom: 20px;
	}

	.form-group label {
		display: block;
		margin-bottom: 8px;
		color: #111827;
		font-size: 14px;
		font-weight: 500;
	}

	.form-group input[type="text"],
	.form-group input[type="email"],
	.form-group textarea {
		width: 100%;
		padding: 10px 12px;
		border: 1px solid #d1d5db;
		border-radius: 8px;
		font-size: 14px;
		font-family: inherit;
		transition: border-color 0.2s;
		box-sizing: border-box;
	}

	.form-group input[type="text"]:focus,
	.form-group input[type="email"]:focus,
	.form-group textarea:focus {
		outline: none;
		border-color: #3245ff;
	}

	.form-group textarea {
		resize: vertical;
		min-height: 80px;
	}

	.checkbox-group {
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.checkbox-group input[type="checkbox"] {
		width: 18px;
		height: 18px;
		cursor: pointer;
		accent-color: #3245ff;
	}

	.checkbox-group label {
		margin: 0;
		cursor: pointer;
		user-select: none;
	}

	.submit-button {
		width: 100%;
		padding: 12px 16px;
		color: white;
		background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
		box-shadow:
			inset 0 0 0 1px rgba(255, 255, 255, 0.12),
			inset 0 -2px 0 rgba(0, 0, 0, 0.24);
		border: none;
		border-radius: 10px;
		font-size: 16px;
		font-weight: 500;
		cursor: pointer;
		transition: all 0.2s;
		font-family: inherit;
	}

	.submit-button:hover {
		box-shadow: none;
		transform: translateY(1px);
	}

	.submit-button:active {
		transform: translateY(2px);
	}

	.success-message {
		display: flex;
		align-items: center;
		gap: 10px;
		margin-top: 16px;
		padding: 12px 16px;
		background: linear-gradient(66.77deg, #d1fae5 0%, #a7f3d0 100%);
		border: 1px solid #6ee7b7;
		border-radius: 8px;
		color: #065f46;
		font-size: 14px;
		animation: slideIn 0.3s ease-out;
	}

	.success-message svg {
		flex-shrink: 0;
		stroke: #065f46;
	}

	@keyframes slideIn {
		from {
			opacity: 0;
			transform: translateY(-10px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@media screen and (max-width: 768px) {
		#contact-form-section {
			margin: 16px;
		}
	}
</style>
